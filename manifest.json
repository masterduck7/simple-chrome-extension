{
	"manifest_version": 3,
	"name": "Hello World",
	"version": "1.0",
	"description": "A simple chrome extension.",
	"permissions": [],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
